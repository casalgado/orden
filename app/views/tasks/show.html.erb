


<div>	
<div class= "container">
	<div class= "row">
		<div class= "col-sm-6 col-xs-12">
			<div class="table-heigth">
				<% for day in current_user.days_with_tasks %>
					<% if day.to_date == Date.today %>
						<h1>Hoy</h1>
					<% elsif day.to_date == Date.today.next_day %>
						<h1>MaÃ±ana</h1>
					<% elsif day.to_date == Date.today.next_day.next_day %>
						<h1>Pasao</h1>
					<% else %>
						<h1><%= day.strftime("%A %u")%></h1>
					<% end %>
					<table class="table table-condensed table-hover table-settings">
						<tr class=>
							<th> Nombre </th>
							<th> Eliminar </th>
						</tr> 
						<% for task in current_user.tasks.incomplete.by_day(day) %>
							<%= display_task(task) %>
						<% end %>
					</table>
				<% end %>
			</div>
		</div>

		<div class= "col-sm-6 hidden-xs">
			<h1> Sidebar </h1>
		</div>
		
	</div>
</div>





<%= render 'tasks/form_for_task' %>
</div>



