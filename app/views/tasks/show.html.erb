<div class="page ">	
	<div class= "container ">
		<div class= "row ">
			<div class= "col-sm-6 col-xs-12 ">
				<div class="table-heigth ">
					<h1> Tarea </h1>
					<ul>
						<li class = "bigger-font"> <%= link_to("#{@task.name}", edit_task_path(@task)) %> </li>
						<li class = "bigger-font"> <%= @task.due_date.strftime("%H:%M") %> </li>
					</ul>
				</div>
			</div>

			<div class= "col-sm-6 hidden-xs ">
				<h1> Sidebar </h1>
				<h5> now <%= Time.now.hour %> </h5> 
				<h5> zone <%= Time.zone.now.hour %> </h5> 
			</div>
			
		</div>
	</div>


	<div class="form-for-task ">
		<%= render 'tasks/form_for_task' %>
	</div>
</div>



