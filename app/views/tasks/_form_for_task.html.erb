
<%= bootstrap_form_for [@task] do |f| %>

	<%= f.hidden_field :user_id, value: current_user.id %>
	<%= f.hidden_field :due_date, value: Time.now %>
	<%= f.hidden_field :complete, value: false %>  <!-- remove this after migration of default -->

	<div class="form-for-task">
		<ul>
		<li class="text-field"> 
			<%= f.text_field :name, layout: :horizontal, hide_label: :true, placeholder: "Agregar tarea"  %>
		</li>
		<li class="submit-button">
			<%= f.submit "Ok" %>
		</li>
	</div>

	

<% end %>

